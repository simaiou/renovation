@import "../../../main.wxss"
@import "../../../icon.wxss"

Page {
	background-color: rgb(246, 246, 246);
}
.container{
	padding-bottom: 130rpx;
}
/* 头部 */
.container .header {
	background-color: #fff;
	display: flex;
	padding: 20rpx;
	border-bottom: 2rpx solid #eee;
	color: #111;
	margin-bottom: 20rpx;
	justify-content: space-between;
	align-items: center;
}

.header .left {
	display: flex;
	flex-direction: column;
}

.container .header .time {
	font-size: 24rpx;
	color: #999;

}
.container .header .right {
	padding: 0rpx 20rpx;
	background-color: rgb(147, 147, 147);
	border-radius: 40rpx;
	background-color: #1cbbb4;
}

.container .header .praise {
	display: flex;
	align-items: center;
	font-size: 28rpx;
	color: #fff;
}

.container .header .praise .count {
	font-weight: bold;
}

.container .header .praise i-icon {
	margin-right: 10rpx !important;
}

.container .header text {
	line-height: 60rpx;
}

.container .header .title {
	font-size: 36rpx;
	font-weight: bold;
}

/* 信息 */
.container .intro {
	background-color: rgb(246, 246, 246);
	font-size: 32rpx;
	display: flex;
	flex-direction: column;
}
.container .intro .tel{
	margin-bottom: 20rpx;
}
.container .intro>view {
	background-color: #fff;
	color: #222;
	padding: 0 20rpx;
	line-height: 100rpx;
	display: flex;
	align-items: center;
	border-bottom: 1rpx solid #f4f4f4;
}
.container .intro view text:nth-child(1) {
	min-width: 120rpx;
	color: #666;
}
.container .intro view text:nth-child(2) {
	padding-left: 20rpx;
}
.container .intro>view:last-child{
	border-bottom: 0;
}
.area {
	border-top: 1rpx solid #eee;
	background-color: #fff;
	padding: 50rpx 10rpx;
	font-size: 28rpx;
	color: #666;
	display: flex;
	align-items: center;
	justify-content: space-between;
}

.area text {
	margin-left: 10rpx;
}

.container .intro .showTel {
	background-color: rgb(28, 187, 180);
	width: 120rpx;
	font-size: 24rpx;
	text-align: center;
	line-height: 50rpx;
	border-radius: 8rpx;
	color: #fff;
	margin-left: 20rpx;

}

/* 工作介绍 */
.container .job-intro {
	font-size: 36rpx;
	font-weight: bold;
	margin-top: 20rpx;
	padding: 20rpx;
	color: #333;
	background-color: #fff;
}

.container .desc {
	font-size: 30rpx;
	line-height: 2;
	padding: 0 20rpx 20rpx;
	background-color: #fff;
	color: #666;
}

.footer {
	display: flex;
	align-items: center;
	justify-content: space-around;
	width: 100%;
	height: 120rpx;
	background-color: #fff;
	border-top: 1rpx solid #f4f4f4;
	position: fixed;
	bottom: 0;
}

.footer>view {
	display: flex;
	flex-direction: column;
	justify-content: center;
	align-items: center;
}

.footer>view text {
	font-size: 24rpx;
	color: #666;
}

.footer button {
	padding: 0;
	margin: 0;
	background-color: #fff;
	line-height: 1;
}

.footer button::after {
	border: 0;
}
.opacity-5{
	opacity: 0.5;
}
.opacity-9{
	opacity: 0.9;
}